{
    "name": "ide-widgets-bootstrap",
    "version": "0.0.1-alpha.1",
    "displayName": "Bootstrap Widgets For BlockLang IDE",
    "repository": {
        "type": "git",
        "url": "https://github.com/blocklang/ide-widgets-bootstrap.git"
    },
    "scripts": {
        "dev": "dojo build --mode dev --watch --serve",
        "build": "dojo build --mode dist",
        "build:dev": "dojo build --mode dev",
        "build:widget": "dojo build widget --mode dist --target lib",
        "test": "dojo test",
        "test:unit": "dojo build --mode unit && dojo test --unit --config local",
        "test:functional": "dojo build --mode functional && dojo test --functional --config local",
        "test:all": "dojo build --mode unit && dojo build --mode functional && dojo test --all --config local",
        "precommit": "lint-staged",
        "prettier": "prettier --write 'src/**/*.{ts, tsx}' 'src/**/*.css' 'tests/**/*.{ts,tsx}'"
    },
    "dependencies": {
        "@dojo/framework": "^6.0.3",
        "@dojo/themes": "^6.0.0",
        "tslib": "~1.9.1",
        "designer-core": "~0.0.1-alpha.10",
        "widgets-bootstrap": "~0.0.1-alpha.1",
        "bootstrap-classes": "~0.0.2",
        "dojo-fontawesome": "~0.0.2"
    },
    "devDependencies": {
        "@dojo/cli": "^6.0.0",
        "@dojo/cli-build-app": "^6.0.4",
        "@dojo/cli-test-intern": "^6.0.0",
        "@types/node": "~9.6.5",
        "husky": "^3.0.8",
        "lint-staged": "^9.4.2",
        "prettier": "^1.18.2",
        "typescript": "~3.4.5",
        "@types/sinon": "^7.0.13",
        "sinon": "^7.5.0"
    },
    "lint-staged": {
        "*.{ts,tsx,css}": [
            "prettier --write",
            "git add"
        ]
    },
    "prettier": {
        "singleQuote": false,
        "tabWidth": 4,
        "useTabs": true,
        "printWidth": 120,
        "arrowParens": "always"
    }
}
