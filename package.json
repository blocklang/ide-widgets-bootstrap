{
    "name": "ide-widgets-bootstrap",
    "version": "0.0.1-alpha.2",
    "displayName": "Bootstrap Widgets For BlockLang IDE",
    "repository": {
        "type": "git",
        "url": "https://github.com/blocklang/ide-widgets-bootstrap.git"
    },
    "scripts": {
        "dev": "dojo build --dojorc .dojorc.dev --mode dev --watch --serve",
        "build": "dojo build --mode dist --single-bundle --omit-hash && shx cp src/icons.svg output/dist",
        "build:dev": "dojo build --mode dev",
        "build:widget": "dojo build widget --mode dist --target lib",
        "test": "dojo test",
        "test:unit": "dojo build --mode unit && dojo test --unit --config local",
        "test:functional": "dojo build --mode functional && dojo test --functional --config local",
        "test:all": "dojo build --mode unit && dojo build --mode functional && dojo test --all --config local",
        "prettier": "prettier --write 'src/**/*.{ts, tsx}' 'src/**/*.css' 'tests/**/*.{ts,tsx}'"
    },
    "dependencies": {
        "@dojo/framework": "^6.0.4",
        "@dojo/themes": "^6.0.0",
        "bootstrap-classes": "^0.0.3-alpha.1",
        "designer-core": "~0.0.1-alpha.52",
        "dojo-fontawesome": "^0.0.3-alpha.1",
        "tslib": "~1.10.0",
        "widgets-bootstrap": "^0.1.7-alpha.4"
    },
    "peerDependencies": {
        "@types/bootstrap": "^4.3.1",
        "bootstrap": "^4.4.1"
    },
    "devDependencies": {
        "@dojo/cli": "^6.0.0",
        "@dojo/cli-build-app": "^6.0.9",
        "@dojo/cli-test-intern": "^6.0.1",
        "@types/node": "^9.6.55",
        "@types/sinon": "^7.5.1",
        "husky": "^4.2.1",
        "lint-staged": "^10.0.7",
        "prettier": "^1.19.1",
        "shx": "^0.3.2",
        "sinon": "^8.1.1",
        "typescript": "~3.4.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,css}": [
            "prettier --write",
            "git add"
        ]
    },
    "prettier": {
        "singleQuote": false,
        "tabWidth": 4,
        "useTabs": true,
        "printWidth": 120,
        "arrowParens": "always"
    }
}
